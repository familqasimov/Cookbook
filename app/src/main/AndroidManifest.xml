<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.github.jnuutinen.cookbook">

    <application
        android:name=".CookbookApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".presentation.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.createrecipe.CreateRecipeActivity"
            android:label="@string/title_activity_create_recipe"
            android:parentActivityName=".presentation.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.jnuutinen.cookbook.presentation.main.MainActivity" />
        </activity>
        <activity
            android:name=".presentation.viewrecipe.ViewRecipeActivity"
            android:label="@string/title_activity_view_recipe"
            android:parentActivityName=".presentation.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.jnuutinen.cookbook.presentation.main.MainActivity" />
        </activity>
        <activity
            android:name=".presentation.editrecipe.EditRecipeActivity"
            android:label="@string/title_activity_edit_recipe"
            android:parentActivityName=".presentation.viewrecipe.ViewRecipeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.jnuutinen.cookbook.presentation.viewrecipe.ViewRecipeActivity" />
        </activity>
        <activity
            android:name=".presentation.categories.CategoriesActivity"
            android:label="@string/title_activity_edit_categories"
            android:parentActivityName=".presentation.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.jnuutinen.cookbook.presentation.main.MainActivity" />
        </activity>
        <activity
            android:name=".presentation.about.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".presentation.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.jnuutinen.cookbook.presentation.main.MainActivity" />
        </activity>
        <activity
            android:name=".presentation.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".presentation.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.jnuutinen.cookbook.presentation.main.MainActivity" />
        </activity>
    </application>

</manifest>